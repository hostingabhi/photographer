<% if(errorMessage != null){ %>
    <script>
      showAlert()
      function showAlert() {
            alert("Invalid credentials");
            showLoginModal();
        }
    </script>
<% } %>
<div id="carouselExampleIndicators" class="carousel slide">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="../../image/banner.jpg" class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img src="../../image/banner2.jpg" class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img src="../../image/banner3.jpg" class="d-block w-100" alt="...">
      </div>
    </div>
   <button class="carousel-control-prev" type="button" data-target="#carouselExampleControls" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-target="#carouselExampleControls" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </button>
  </div>
<div class="container">
  <div class="row">
    <div class="col-sm">
      <div class="headertext">
        <h1 class="fontcolour">
          Capturing moments, framing life's stories<br>
        </h1>
        <h3 class="typewriter">Shutter clicks, memories unfold <br> beautifully.</h3>

        <a href="/jobs">
          <button class="pink-button">I'm A Customer</button>
        </a>
        <!-- Button to trigger the modal -->
        <% if(locals.userEmail) { %>
          <a href="/jobs"><button class="pink-button">I'm A Photographer</button></a>
          <% }else{ %>
            <button type="button" class="pink-button" data-toggle="modal" data-target="#register-Modal">I'm A Photographer</button>
          <% } %> 
      </div>
    </div>
    <div class="col-sm">
      <img class="frontimage" src="/image/lense.png" style="max-width: 100%; height: auto;">
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
      <% jobs.forEach(job => { %>
          <div class="white-border-box" style="width: 18rem; background-color: transparent;">
              <img src="<%= job.imageUrl %>" class="card-img-top" alt="...">
              <div class="card-body">
                  
                <h5 class="card-title"><%= job.name %></h5>
                <p class="card-text"><%= job.desc %>
                  </p>
                  <% if(locals.userEmail) { %>
                    <a href="/ViewDetails/<%= job.id %>">
                      <button class="btn btn-primary btn-lg btn-block">View details
                      </button>
                  </a>
                    <% }else{ %>
                      <a>
                        <button class="btn btn-primary btn-lg btn-block" type="button" data-toggle="modal" data-target="#register-Modal" >View details
                        </button>
                    </a>
                    <% } %> 
              </div>
            </div>
          <% }); %>
  </div>
</div>

